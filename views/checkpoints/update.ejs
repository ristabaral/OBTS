<%- include('../partials/operatorNav.ejs') %>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body text-center">
                <!-- <h1><i class="fab fa-node-js fa-3x"></i></h1> -->
                <h1>Update Checkpoint</h1>
                <hr>
                <form method="POST" action="/api/checkpoints/<%= checkpoint._id %>">
                    <div class="mb-3">
                        <label for="checkpoint" class="form-label">Checkpoint</label>
                        <input type="text" class="form-control" value="<%= checkpoint.checkpoint %>" name="checkpoint" id="checkpoint">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>