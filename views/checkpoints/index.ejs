<%- include('../partials/operatorNav.ejs') %>

    <link rel="stylesheet" href="/css/table.css">

    <div style="display: flex;justify-content: space-between;">
        <div>
            <h1>All Checkpoints</h1>
        </div>
        <div style="padding-top: 10px;">
            <a href="/api/dashboard/addcheckpoint"><button>Add Checkpoint</button></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Checkpoint</th>
            </tr>
        </thead>
        <% documents.forEach((doc, index)=>{ %>
            <tbody>
                <tr>
                    <th scope="row">
                        <%= index+1 %>
                    </th>
                    <td>
                        <%= doc.checkpoint %>
                    </td>
                    <td>
                        <a href="#"><button>View</button></a>
                        <a href="/api/dashboard/checkpoints/update/<%= doc._id %>"><button>Edit</button></a>
                        <a href="/api/dashboard/checkpoints/delete/<%= doc._id %>"><button>Delete</button></a>
                    </td>
                </tr>
            </tbody>
            <% }) %>
    </table>