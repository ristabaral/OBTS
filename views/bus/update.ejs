<%- include('../partials/operatorNav.ejs') %>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body text-center">
                <!-- <h1><i class="fab fa-node-js fa-3x"></i></h1> -->
                <h1>Update Bus</h1>
                <hr>
                <form action="/api/buses/<%= bus._id %>" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="busNo" class="form-label">Bus Number</label>
                        <input type="text" class="form-control" value="<%= bus.busNo %>" name="busNo" id="busNo">
                    </div>
                    <div class="mb-3">
                        <label for="busName" class="form-label">Bus Name</label>
                        <input type="text" class="form-control" value="<%= bus.busName %>" name="busName" id="busName">
                    </div>
                    <div class="mb-3">
                        <label for="type" class="form-label">Type</label>
                        <input type="text" class="form-control" value="<%= bus.type %>" name="type" id="type">
                    </div>
                    <div class="mb-3">
                        <label for="numOfSeats" class="form-label">Number Of Seats</label>
                        <input type="number" class="form-control" value="<%= bus.numOfSeats %>" name="numOfSeats" id="numOfSeats">
                    </div>
                    <div class="mb-3">
                        <input type="checkbox" name="scheduled">Scheduled
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" class="form-control" name="image" id="image">
                    </div>
                    <!-- <input type="hidden" name="_method" value="PUT"> -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>