<button class="payment" type="submit"><a href="/api/refticket/print">Print Ticket</a></button>


<div class="busimage">
    <img src="/images/bus.jpg" alt="">
</div>

<div class="here">

    <!-- THis is ticket section !-->
    <div class="alltickets">
        <% data.passengers.forEach(p=>{ %>
            <div class="card">
                <div class="card-image">
                    <img src="<%= data.image %>" width="100%" alt="Bus Image">
                </div>
                <div class="card-text">

                    <div class="bus">
                        <div class="busDetail">
                            <span>Bus Name</span>
                            <%= data.busName %>
                        </div>

                        <div class="busDetail">
                            <span>Bus Number</span>
                            <%= data.busNo %>
                        </div>
                    </div>

                    <span class="date">Passenger Name</span>
                    <h2>
                        <%= p.name.toUpperCase() %>
                    </h2><br>
                    <h3>Booking ID:
                        <%= data.booking %>
                    </h3><br>
                    <h4>Price:
                        <%= data.price %>
                    </h4>
                    <div class="place" style="justify-content: space-around;">

                        <div class="city" style="display: inline;">
                            <%= data.from %>
                        </div>

                        <div class="arrow" style="display: inline;"><i class="fa fa-exchange fa-2x" aria-hidden="true"></i></div>

                        <div class="city1" style="display: inline;">
                            <%= data.to %>
                        </div>
                    </div>
                    <div class="seat">
                        <div class="float">Date
                            <i class="fa fa-calendar"></i><br>
                            <%= data.schedule.depart %>
                        </div>
                        <div class="float">
                            Time<i class="fa fa-clock-o"></i><br>
                            <%= data.schedule.departTime %>
                        </div>
                        <div class="float">
                            Seat<i class="fa fa-sitemap"></i><br>
                            <%= p.seat %>
                        </div>
                    </div>

                </div>

                <div class="stat">
                    <form action="/api/ticket/print" method="POST">
                        <input type="hidden" name="pname" value="<%= p.name %>">
                        <input type="hidden" name="busName" value="<%= data.busName %>">
                        <input type="hidden" name="busNo" value="<%= data.busNo %>">
                        <input type="hidden" name="price" value="<%= data.price %>">
                        <input type="hidden" name="image" value="<%= data.image %>">
                        <input type="hidden" name="booking" value="<%= data.booking %>">
                        <input type="hidden" name="from" value="<%= data.from %>">
                        <input type="hidden" name="to" value="<%= data.to %>">
                        <input type="hidden" name="date" value="<%= data.schedule.depart %>">
                        <input type="hidden" name="time" value="<%= data.schedule.departTime %>">
                        <input type="hidden" name="seat" value="<%= p.seat %>">
                        <input class="pbtn" type="submit" value="Print">

                    </form>
                    <!-- Print -->
                </div>
            </div>

            <% }) %>
    </div>
</div>